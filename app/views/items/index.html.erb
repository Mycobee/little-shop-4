<h1>Items Catalogue</h1>

<section class="index_container">
  <% @items.each do |item| %>
  <section class="index-card">
    <div id="<%=item.id%>">
      <% if item.enabled == true %>
      <h2><%= link_to item.name, item_path(item) %></h2>
      <%= link_to image_tag(item.image_url), item_path(item), class: "image#{item.id}", id: "img"%>
      <ul id="item_list">
        <li><%= item.merchant_name %></li>
        <li><%= item.description %></li>
        <li><%= item.quantity %></li>
        <li>$<%= item.base_price %></li>
      </ul>
      <%= button_to "Add to Cart", carts_path(item_id: item.id) %>
      <% end %>
    </div>
  </section>
  <% end %>
<nav>
  <h3>Item Statistics</h3>
<h4>Five most popular items</h4>
  <% @items.top_five.each do |item| %>
  <ul class="top-five-<%= item.id %>">
    <li><%= item.name %></li>
    <li><%= link_to image_tag(item.image_url), item_path(item), class: "image#{item.id}", id: "img"%></li>
    <li>Quantity Bought: <%= item.quantity_bought %></li>
  </ul>
<% end %>
<h5>Five least popular items</h5>
  <% @items.bottom_five.each do |item| %>
  <ul class="bottom-five-<%= item.id %>">
    <li><%= item.name %></li>
    <li><%= link_to image_tag(item.image_url), item_path(item), class: "image#{item.id}", id: "img"%></li>
    <li>Quantity Bought: <%= item.quantity_bought %></li>
  </ul>
<% end %>
</section>
</nav>
